<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- Action of the view configuration -->
    <record model="ir.actions.act_window" id="course_action_list">
        <field name="name">Courses</field>
        <field name="res_model">openacademy.course</field>
        <field name="view_mode">tree,kanban,form</field>
    </record>
    <!-- This is tree view configuration -->
    <record model="ir.ui.view" id="course_view_tree">
        <field name="name">openacademy.course_view_tree</field>
        <field name="model">openacademy.course</field>
        <field name="arch" type="xml">
            <tree>
                <field name="title" />
                <field name="description"/>
            </tree>
        </field>
    </record>
    <!-- notebook configuration -->
    <record model="ir.ui.view" id="course_view_notebook">
        <field name="name">openacademy.course.view_form</field>
        <field name="model">openacademy.course</field>
        <field name="arch" type="xml">
            <form>
                <sheet string="Course">
                    <group>
                        <field name="title"/>
                    </group>
                    <notebook>
                        <page name="Course information" string="Course information">
                            <group colspan="10" col="4">
                                <field name="description" />
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <!-- search configuration -->
    <record model="ir.ui.view" id="course_view_search">
        <field name="name">openacademy.course_view_search</field>
        <field name="model">openacademy.course</field>
        <field name="arch" type="xml">
            <search>
                <field name="title"/>
                <field name="description"/>
            </search>
        </field>
    </record>
</odoo>
